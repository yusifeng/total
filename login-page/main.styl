@import 'varilable'

//header
.bar-wrapper
  // position absolute
  top 0
  left 0
  z-index 10
  width 100%
  height 60px
  background-color $color-bar-hover-background
  .logo
    float left
    height 60px
    margin-left 37px
    a
      display inline-block
      width 100%
      height 100%
      width 123px
      background-image url(./imgs/logo.png)
      background-repeat no-repeat
      text-indent -5000px
      background-position 0 10px
      background-size 123px 41px
      .img
        margin-top 10px
  .bar-nav-right
    height 100%
    float right
    margin-right 37px
    li
      position relative
      float left
      padding 0 16px
      &:hover 
        transition all 150ms linear 
        background-color $color-common-theme-sub-color
      a
        display inline-block
        height 60px
        line-height 60px
        color $ffffff
        font-size $bar-item-color


//footer
.footer
  width 100%
  background-color $color-footer-background
  color $color-footer-dt-color
  .footer-website
    padding-top 30px
    padding-bottom 20px
    width 100%
    .inner
      font-size 0
      margin-right -120px
      .footer-website-item
        float left
        margin-left 30px
        margin-right 140px
        box-sizing border-box
        h3
          font-size $common-footer-title-size
        ul
          margin-top 15px
          margin-bottom 15px
          li
            font-size $common-footer-item-size
            line-height 1.8
            color $color-footer-dd-color
            a
              color $color-footer-dd-color
              &:hover
                color $color-common-theme-hover-color
  .footer-copyright
    width 1200px
    margin 0 auto
    padding-top 30px
    text-align left
    line-height 1.8
    font-size $common-footer-copyright-size
    border-top 1px solid $color-footer-line-color
    color $color-footer-dd-color
    p
      span
      img
        vertical-align middle
    .hwba
      color $color-footer-dd-color
      font-size $common-footer-copyright-size
      vertical-align bottom
      &:hover
        color $color-common-theme-hover-color